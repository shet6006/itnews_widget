{
  "name": "itnews",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.itnews.widget",
    "productName": "ITNewsWidget",
    "files": [
      "node_modules/**/*",
      "main.js",
      "preload.js",
      "index.html",
      "newsFetcher.js",
      "translator.js",
      "icon.png",
      "style.css",
      "renderer.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    }
  },
  "dependencies": {
    "axios": "^1.8.1",
    "cheerio": "^1.0.0",
    "electron-auto-launch": "^5.0.7",
    "electron-store": "^10.0.1",
    "puppeteer": "^24.3.0"
  },
  "devDependencies": {
    "electron": "^34.2.0",
    "electron-builder": "^24.6.2"
  }
}
